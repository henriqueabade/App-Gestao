{
  "name": "santissimo-decor-dashboard",
  "version": "1.0.21",
  "description": "Dashboard admin for Santissimo Decor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --config electron-builder.config.js",
    "dist:publish": "electron-builder --config electron-builder.config.js --publish onTagOrDraft",
    "publish": "npm run dist:publish",
    "verify-smtp": "node backend/verifyTransporter.js",
    "test": "node --test backend",
    "build:tailwind": "tailwindcss -i ./src/styles/tailwind-input.css -o ./src/styles/tailwind-offline.css --minify"
  },
  "author": "Henrique Viana Abade",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "pg-mem": "^3.0.5",
    "tailwindcss": "^3.4.10"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.0",
    "electron-updater": "^6.6.2"
  },
  "type": "commonjs",
  "build": {
    "nsis": {
      "include": "build/installer.nsh"
    }
  }
}
